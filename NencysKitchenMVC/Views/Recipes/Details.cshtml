@model RecipeViewModel

<h3 class="my-5">
    @Model.RecipeName
</h3>

<div class="row gx-5">
    <img alt="@Model.RecipeName" src="@Model.ImageUrl" class="img-thumbnail col-6" height />
    <div class="col-7">
        <h3>@Model.ShortDescription</h3>
        <p>@Model.LongDescription</p>
        <h4 class="pull-right">Broj serviranja: @Model.Serves</h4>
        <div>
            @if (Model.RecipeIngredients != null)
            {
                <table class="table table-sm table-striped table-bordered m-2">
                    <thead>
                        <tr>
                            <th>Količina</th>
                            <th>Mera</th>
                            <th>Sastojak</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model.RecipeIngredients)
                        {
                            <tr>
                                <td>@r.QtyAmount</td>
                                <td>@r.MeasurementUnit.MeasurementName</td>
                                <td>@r.Ingredient.IngredientName</td>
                            </tr>
                        }
                    </tbody>
                </table>
                @if (Model.RecipeStep != null)
                {
                    <table class="table table-sm table-striped table-bordered m-2">
                        <thead>
                            <tr>
                                <th>Korak</th>
                                <th>Instrukcija</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var r in Model.RecipeStep)
                            {
                                <tr>
                                    <td>@r.StepNumber</td>
                                    <td>@r.Instruction</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }

            }
            <div class="addToFavorite">
                <p class="button">

                </p>
            </div>
        </div>
    </div>
</div>
